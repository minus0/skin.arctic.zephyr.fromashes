			    <texture border="5" colordiffuse="Panel">buttons/dialoge_inner.png</texture>
            </control>
		    <control type="image">
                <posx>0</posx>
                <posy>0</posy>
                <width>600</width>
                <height>700</height>
                <texture colordiffuse="Panel" border="16">dialog/frame_Landscape-fo.png</texture>
            </control>
		    <control type="image">
                <posx>30</posx>
                <posy>20</posy>
                <width>540</width>
                <height>90</height>
                <texture colordiffuse="Black" border="25">buttons/dialoge_shadow.png</texture>
            </control>
		    <control type="label" id="500">
                <description>header label</description>
                <posy>31</posy>
                <posx>45</posx>
				<width>500</width>
                <font>SmallBold</font>
                <align>center</align>
				<label>Power Menu</label>
                <textcolor>$VAR[DialogHeadersTextColour]</textcolor>
				<!--<textcolor>Black70</textcolor>-->
            </control>
			<control type="image">
                <posx>55</posx>
                <posy>30</posy>
                <width>70</width>
                <height>70</height>
                <texture border="5" colordiffuse="Black">common/white.png</texture>
                <aspectratio align="center" aligny="bottom">keep</aspectratio>
            </control>
			<control type="image">
                <posx>55</posx>
                <posy>30</posy>
                <width>70</width>
                <height>70</height>
                <texture>special://skin/extras/icons/power.png</texture>
                <aspectratio align="center" aligny="bottom">keep</aspectratio>
            </control>

