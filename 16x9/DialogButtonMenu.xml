            <control type="grouplist" id="3110">
                <description>grouplist for context buttons</description>
                <posx>42</posx>
                <posy>148</posy>
                <width>790</width>510
                <height>502</height>
                <itemgap>3</itemgap>

			    <control type="button" id="74656">
                    <description>About From Ashes</description>
                    <width>520</width>
					<align>center</align>
					<property name="image">special://skin/media/default/DefaultAddonProgram.png</property>
				    <include>DefSkinSettingMenuButton</include>
				    <label>About From Ashes</label>
                    <onclick>ActivateWindow(3115)</onclick>
                </control>

                <control type="button" id="3111">
                    <description>Exit XBMC button</description>
                    <width>520</width>
					<align>center</align>
					<include>DefSkinSettingMenuButton</include>
                    <label>13012</label>
                    <onclick>Quit()</onclick>
                    <visible>System.ShowExitButton</visible>
                </control>

                <control type="button" id="3112">
                    <description>Master mode button</description>
					<width>520</width>
					<align>center</align>
                    <include>DefSkinSettingMenuButton</include>
                    <label>20046</label>
                    <altlabel>20045</altlabel>
                    <onclick>xbmc.mastermode</onclick>
                    <visible>System.HasLocks</visible>
                </control>

                <control type="button" id="3113">
                    <description>LogOff Profile</description>
					<width>520</width>
					<align>center</align>
                    <include>DefSkinSettingMenuButton</include>
                    <label>$LOCALIZE[20126] $INFO[system.profilename]</label>
                    <onclick>dialog.close(all,true)</onclick>
                    <onclick>System.LogOff</onclick>
                    <visible>System.Loggedon + System.HasLoginScreen</visible>
                </control>
			
                <control type="button" id="3116">
                    <description>Shutdown</description>
				    <width>520</width>
					<align>center</align>
                    <include>DefSkinSettingMenuButton</include>
                    <label>13005</label>
                    <onclick>Powerdown()</onclick>
                    <visible>System.CanPowerDown</visible>
                </control>
                
                <control type="button" id="3114">
                    <description>Custom Shutdown Timer button</description>
				    <width>520</width>
					<align>center</align>
                    <include>DefSkinSettingMenuButton</include>
                    <label>20151</label>
                    <onclick>XBMC.CancelAlarm(shutdowntimer)</onclick>
                    <visible>System.HasAlarm(shutdowntimer)</visible>
                </control>

                <control type="button" id="3115">
                    <description>Custom Shutdown Timer button</description>
				    <width>520</width>	
					<align>center</align>
                    <include>DefSkinSettingMenuButton</include>
                    <label>20150</label>
                    <onclick>XBMC.AlarmClock(shutdowntimer,XBMC.Shutdown())</onclick>
                    <visible>!System.HasAlarm(shutdowntimer)</visible>
                    <visible>System.CanPowerDown | System.CanSuspend | System.CanHibernate</visible>
                </control>

                <control type="label" id="3119">
                    <description>Alarm Time</description>
				    <width>570</width>
					<align>center</align>
                    <include>DefSkinSettingMenuButton</include>
                    <align>center</align>
                    <label>$LOCALIZE[20145] [B]$INFO[System.Alarmpos][/B]</label>
                    <visible>System.HasAlarm(shutdowntimer)</visible>
                </control>

                <control type="button" id="3117">
                    <description>Suspend xbmc</description>
					<width>520</width>
					<align>center</align>
                    <include>DefSkinSettingMenuButton</include>
                    <label>13011</label>
                    <onclick>XBMC.Suspend()</onclick>
                    <visible>System.CanSuspend</visible>
                </control>

                <control type="button" id="3118">
                    <description>Reboot button</description>
					<width>520</width>
					<align>center</align>
                    <include>DefSkinSettingMenuButton</include>
                    <label>13013</label>
                    <onclick>XBMC.Reset()</onclick>
                    <visible>System.CanReboot</visible>
                </control>
                
                <control type="button" id="3121">
				    <width>520</width>
					<align>center</align>
                    <include>DefSkinSettingMenuButton</include>
                    <label>5</label>
                    <onclick>ActivateWindow(settings)</onclick>
                </control>
                
                <control type="button" id="3122">
				    <width>520</width>
					<align>center</align>
                    <include>DefSkinSettingMenuButton</include>
                    <label>130</label>
                    <onclick>ActivateWindow(systeminfo)</onclick>
                </control>
                
                <control type="button" id="3123">
				    <width>520</width>
					<align>center</align>
                    <include>DefSkinSettingMenuButton</include>
                    <label>10003</label>
                    <onclick>ActivateWindow(filemanager)</onclick>
                </control>
                
                <control type="button" id="3120">
                    <width>520</width>
					<align>center</align>
                    <include>DefSkinSettingMenuButton</include>
                    <label>31195</label>
                    <onclick>ReloadSkin()</onclick>
				</control>

            </control>
            <control type="group">
                <control type="image">
                    <description>arrow image</description>
                    <centerleft>50%</centerleft>
                    <posy>122</posy>
                    <width>16</width>
                    <height>16</height>
                    <texture colordiffuse="Dark2" flipy="true">common/arrow-small.png</texture>
                </control>
                <control type="image">
                    <description>arrow image</description>
                    <centerleft>50%</centerleft>
                    <posy>660</posy>
                    <width>16</width>
                    <height>16</height>
                    <texture colordiffuse="Dark2" flipy="false">common/arrow-small.png</texture>
                </control>
            </control>
        </control> 
 
    </controls>

</window>
