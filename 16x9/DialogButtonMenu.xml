    <zorder>10</zorder>
    <controls>
        <include>GlobalOverlay</include>

        <control type="group">
            <include>Animation.ZoomIn</include>
			<top>175</top>
		    <centerleft>50%</centerleft>
		    <height>700</height>
		    <width>600</width>
		    <control type="image">
			    <description>background image</description>
			    <posx>5</posx>
			    <posy>5</posy>
			    <width>590</width>
                <height>692</height>
			    <!--<texture>buttons/dialogbutton-fo.png</texture>
