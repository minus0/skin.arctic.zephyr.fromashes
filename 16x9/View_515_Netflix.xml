							<width>auto</width>
							<align>center</align>
							<height>34</height>
							<font>NetflixSmall</font>
							<textcolor>PanelWhite70</textcolor>
							<selectedcolor>PanelWhite70</selectedcolor>
							<label>$INFO[ListItem.Label]</label>
